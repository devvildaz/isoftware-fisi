#:import DirectorySearch components.DirectorySearch
#:import Label kivy.uix.label.Label

FloatLayout:
  BoxLayout:
    orientation: 'vertical'
    canvas:
      Color:
        rgba: .0,.0,.0,1
      Rectangle:
        pos: self.pos
        size: self.size
    DirectorySearch:
    StackLayout:
      on_parent:
        for i in range(10): txt = Label(text=str(i), size_hint=(0.1,None)); self.add_widget(txt)      
      id: stackimages
      canvas:
        Color:
          rgba: .6,.5,.5,1
        Rectangle:
          pos: self.pos
          size: self.size
  BoxLayout:
    size_hint: (None, .5)
    width: 300
    canvas:
      Color:
        rgba: .2,.2,.2,1
      Rectangle:
        pos: self.pos
        size: self.size
    pos_hint: {'x': 0, 'y': .25}
