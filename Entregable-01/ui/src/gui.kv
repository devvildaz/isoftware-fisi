#:import DirectorySearch components.DirectorySearch
#:import ImageButton components.ImageButton

FloatLayout:

  id: floatid
  BoxLayoutExample:
    id: boxlayoutexample
    orientation: "horizontal"
    size_hint: 1, 1
    Button:
      text:"A"
      size_hint: .5, None
      #size: "100dp","60dp"
      #width: "100dp"
      height: "60dp"

      # x, center_x, right
      # y, center_y, top
      pos_hint: {"center_x":.5}

  BoxLayout:
    id: boxid
    orientation: 'vertical'
    canvas:
      Color:
        rgba: .0,.0,.0,1
      Rectangle:
        pos: self.pos
        size: self.size
    DirectorySearch:
    StackLayout:
      id: stackimages
      spacing: (10,10)
      padding: (10,10)
      canvas:
        Color:
          rgba: .6,.5,.5, 0
        Rectangle:
          pos: self.pos
          size: self.size


<BoxLayoutExample2>:
  id: boxlayoutexample
  orientation: "horizontal"
  Button:
    text:"A"
    size_hint: .5, None
    #size: "100dp","60dp"
    #width: "100dp"
    height: "60dp"

    # x, center_x, right
    # y, center_y, top
    pos_hint: {"center_x":.5}
