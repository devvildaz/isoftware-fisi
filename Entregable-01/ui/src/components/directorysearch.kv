#:import Factory kivy.factory.Factory

<DirectorySearch>
  id: dirlayout
  size_hint: (1, None)
  height: 32
  canvas:
    Color:
      rgba: .5,.9,.9,1
    Rectangle:
      pos: self.pos
      size: self.size
  TextInput:
    id: dirpathinput
    readonly: True
    size_hint: (0.95, 1)
  Popup:
    id: filepopup
    size_hint: (.6,.6)
    on_parent:
      if self.parent == dirlayout : self.parent.remove_widget(self)
    title: 'Explorador de carpetas'
    BoxLayout:
      orientation: 'vertical'
      FileChooserListView:
        id: filechooserid
        dirselect: True
        path: '.'
        filters: ['']

      BoxLayout:
        size_hint: (1,None)
        height: 50
        Button:
          text: 'Aceptar'
          on_release: 
            dirpathinput.text = filechooserid.selection and filechooserid.selection[0] or dirpathinput.text
            root.on_dir_change_event(dirpathinput.text)
            filepopup.dismiss()
        Button:
          text: 'Rechazar'
          on_release: filepopup.dismiss()
  Button:
    size_hint: (0.05, 1)
    id: dirbtn
    text: '>'
    on_release: 
      filepopup.open()

